<Window x:Class="CAR_SPARE_PARTS.StoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CAR_SPARE_PARTS"
        mc:Ignorable="d"
        Title="StoreWindow" Height="490" Width="800" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen"
        Style="{DynamicResource WindowStyle}">
    <Grid>
        <ListBox x:Name="productsListBox" Margin="204,40,204,39">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock FontSize="18" Text="{Binding Path=Title}" />
                        <TextBlock FontSize="16" Text="{Binding Path=PricePerPiece}" />
                        <TextBlock FontSize="14" Text="{Binding Path=DateOfManufacture}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
