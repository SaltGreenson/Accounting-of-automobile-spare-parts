<Window x:Class="CAR_SPARE_PARTS.AdministratorAcces"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CAR_SPARE_PARTS"
        mc:Ignorable="d"
        Title="AdministratorAcces" Height="337" Width="408"
        Style="{DynamicResource WindowStyle}" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Введите пароль администратора" VerticalAlignment="Top" Height="78" Width="244" FontFamily="Segoe UI Black" FontSize="28" Foreground="#0077B2"/>
        <PasswordBox x:Name="passwordTextBox" Style="{DynamicResource PasswordBoxStyle}" HorizontalAlignment="Center" FontSize="28" VerticalAlignment="Top" Width="360" Height="36" Margin="0,125,0,0"/>
        <Button Style="{DynamicResource ButtonStyle}" Click="CheckAccess_click" Content="Получить доступ" HorizontalAlignment="Center" VerticalAlignment="Top" Height="61" Width="278" ClickMode="Release" FontSize="24" Margin="0,207,0,0"/>
    </Grid>
</Window>
